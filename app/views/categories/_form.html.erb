<div class="form-wrapper">
    <%= form_for(@category) do |f| %>
      <% if @category.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
          <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :parent_id, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.select :parent_id, options_for_select(category_dropdown_options, @category.parent_id.to_i > 0 === true ? @category.parent_id : :parent_id), {}, {:class => 'form-control'}%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :content, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%=f.text_area :content, :class => 'tinymce' %>
          <%=tinymce%>
        </div>
      </div>



      <div class="form-group">
        <div class="col-sm-2 control-label"></div>
        <div class="col-sm-10">
          <%= f.submit :class => 'btn btn-success btn-lg' %>
        </div>
      </div>
    <% end %>
</div>