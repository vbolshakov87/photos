<!DOCTYPE html>
<html>
<head>
  <title>PhotosLoc</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false' %>
  <link href="/assets/bootstrap-datepicker3.css" media="all" rel="stylesheet" />
</head>
<body>
<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Photo archive</a>
    </div>
    <!<div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li<%if active_page('categories')%> class="active"<%end%>><%= link_to "Categories", categories_path%></li>
        <li<%if active_page('posts')%> class="active"<%end%>><%= link_to "All Posts", posts_path%></li>
        <li<%if active_page('photos')%> class="active"<%end%>><%= link_to "All Photos", photos_path%></li>
        <li<%if active_page('tags')%> class="active"<%end%>><%= link_to "All Tags", tags_path%></li>
        <li<%if active_page('configuration')%> class="active"<%end%>><a href="#contact">Configuration</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li class="dropdown-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
            <li class="active"><a>Logged in as <%= current_user['email'] %>.</a></li>
            <li><%= link_to "Log out", log_out_path %></li>
        <% else %>
            <li><%= link_to "Sign up", sign_up_path %></li>
            <li><%= link_to "log in", log_in_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :class => name == 'notice' ? 'alert alert-success' : 'alert alert-danger' %>
  <% end %>


  <%= yield %>

  <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
